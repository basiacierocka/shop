<h1 class="site_name"> Koszyk</h1>
<table class="basket-table">
 <thead>
   <tr>
     <th> Nazwa Produktu </th>
     <th> Wybrana ilość </th>
     <th> Cena </th>
     <th> Razem </th>
     <th> Usuń </th>
   </tr>
 </thead>
 <tbody>
   <% basket.each do |b| %>
 <tr>
   <td><%= b[:product].name %></td>
   <td><%= b[:quantity] %></td>
   <td><%= b[:product].price %> zł</td>
   <td><%= b[:total_price] %> zł</td>
   <td></td>
 </tr>
 <% end %>
 </tbody>
 <tfoot><tr>
   <td></td>
   <td></td>
   <td>SUMA</td>
   <td><%= basket.reduce(0) {|total_price, item| total_price += item[:total_price]} %> zl</td>
   <td>
     <form action="/basket_cleaned" method="patch">
       <input type="hidden" name="basket" value=<%basket%>>
       <input type="submit" value="Usuń wszystko">
     </form>
   </td>
 </tr>
 </tfoot>
</table>
